// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // URL koneksi database dari .env
}

model Post {
  id      Int     @id @default(autoincrement())
  title   String
  content String
}
